#!/usr/bin/env bash

set -e

git checkout develop
git pull
git checkout -b qa
git push -u origin qa
echo "#############################################"
echo "qa branch created"
echo "#############################################"


git checkout develop
NEW_VERSION=`./bin/bump-version "MINOR"`
git tag -a ${NEW_VERSION} -m "${NEW_VERSION}"
git push --tags

echo "#############################################"
echo "develop branch now at version ${NEW_VERSION}"
echo "#############################################"
