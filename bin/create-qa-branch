#!/usr/bin/env bash

set -e

git checkout develop
git pull
git checkout -b qa
git push -u origin qa
echo "#############################################"
echo "qa branch created"
echo "#############################################"

git checkout develop
NEW_VERSION=`./bin/bump-version "MINOR"`


echo "$NEW_VERSION" >> .tags

git add .tags
echo "1"
git commit -m "$NEW_VERSION"
echo "2"
git tag -am ${NEW_VERSION}
echo "3"
git push
echo "4"
git push --tags
echo "5"

echo "#############################################"
echo "develop branch now at version ${NEW_VERSION}"
echo "#############################################"
