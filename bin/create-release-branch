#!/usr/bin/env bash

set -e

git checkout develop
git pull

CURRENT_RELEASE_BRANCH_TAG=`git describe --match "release-branch-*"`
CURRENT_RELEASE_BRANCH=`echo "$CURRENT_RELEASE_BRANCH_TAG | sed -E "s/(release-branch-[0-9])+./\1/"`

echo $CURRENT_RELEASE_BRANCH
