#!/usr/bin/env bash

CURRENT_TAG=`git describe`

MAJOR=`echo "$CURRENT_TAG" | sed -E 's/v([0-9]+)\.[0-9]+\.[0-9]+.*/\1/'`
MINOR=`echo "$CURRENT_TAG" | sed -E 's/v[0-9]+\.([0-9]+)\.[0-9]+.*/\1/'`
PATCH=`echo "$CURRENT_TAG" | sed -E 's/v[0-9]+\.[0-9]+\.([0-9])+.*/\1/'`

NEW_MINOR=$(( MINOR + 1 ))

echo "v$MAJOR.$NEW_MINOR.$PATCH"
