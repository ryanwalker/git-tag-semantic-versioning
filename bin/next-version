#!/usr/bin/env bash

set -e

if [[ -z "$2" ]]; then
    echo "usage: next-version [<release-type>] [<bump-type>]"
    echo ""
    echo "    release-type: ALPHA, BETA, PROD"
    echo "    bump-type:    MAJOR, MINOR, PATCH"
    echo ""
    exit 1;
fi

BUMP_TYPE=$2
RELEASE_TYPE="-$1"
if [ "$RELEASE_TYPE" == "-PROD" ]; then
  RELEASE_TYPE=""
fi

CURRENT_VERSION=`./bin/current-version`
echo $CURRENT_VERSION

MAJOR=`echo "$CURRENT_VERSION" | sed -E "s/v([0-9]+)\.[0-9]+\.[0-9]+\.[0-9]+*/\1/"`
MINOR=`echo "$CURRENT_VERSION" | sed -E "s/v[0-9]+\.([0-9]+)\.[0-9]+\.[0-9]+.*/\1/"`
PATCH=`echo "$CURRENT_VERSION" | sed -E "s/v[0-9]+\.[0-9]+\.([0-9])+\.[0-9]+.*/\1/"`

case "$BUMP_TYPE" in
"MAJOR")
    MAJOR=$((MAJOR+1))
    MINOR=0
    PATCH=0
    ;;
"MINOR")
    MINOR=$((MINOR+1))
    PATCH=0
    ;;
"PATCH")
    PATCH=$((PATCH+1))
    ;;
esac

NEW_VERSION="v$MAJOR.$MINOR.$PATCH$RELEASE_TYPE"
echo $NEW_VERSION
